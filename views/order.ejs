<%- include('includes/header') %>
  <%- include('includes/sidebar') %>

    <main id="main" class="main">

      <div class="pagetitle">
        <h1>주문하기</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Order</li>
          </ol>
        </nav>
      </div><!-- End Page Title -->

      <section class="section">
        <div class="row">
          <div class="col-lg-12">

            <div class="card">
              <div class="card-body">
                <h5 class="card-title">받는사람 정보 <a style="font-size:14px" href="#" data-bs-toggle="modal"
                    data-bs-target="#addressSelectModal">배송지 선택</a></h5>

                <!-- General Form Elements -->
                <div>
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">이름</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="deliveryUserName" readonly>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">휴대폰 번호</label>
                    <div class="col-sm-10">
                      <input type="tel" class="form-control" id="deliveryUserPhone" readonly>
                    </div>
                  </div>
                  <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">배송 주소</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="deliveryUserAddress" readonly>
                    </div>
                  </div>

                </div>
              </div>
            </div>

            <div class="card">
              <div class="card-body">
                <h5 class="card-title" id="orderRestaurantName"></h5>

                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">메뉴</th>
                      <th scope="col">가격</th>
                      <th scope="col">수량</th>
                      <th scope="col">총 가격</th>
                      <th scope="col">삭제</th>
                    </tr>
                  </thead>
                  <tbody id="cartItemList">

                  </tbody>
                  <tr class="table-active">
                    <th scope="row" colspan="4" style="text-align: right;">총 결제금액</th>
                    <td><b id="allPrice"></b></td>
                  </tr>
                </table>

                <div style="float:right">
                  <button type="button" class="btn btn-primary" id="createOrder">주문하기</button>
                </div>
              </div>
            </div>
          </div>


        </div>
      </section>

    </main>


    <!-- Modal -->
    <div class="modal fade" id="addressSelectModal" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">배송지를 선택해 주세요 <a style="font-size: 14px;" href="#"
                data-bs-toggle="modal" data-bs-target="#newAddressModal">배송지
                추가</a></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
              id="closeSelectModalBtn"></button>

          </div>
          <div class="modal-body">

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">이름</th>
                  <th scope="col">연락처</th>
                  <th scope="col">주소</th>
                  <th scope="col">선택</th>
                </tr>
              </thead>
              <tbody id="userAddressList">

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="newAddressModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">새로운 배송지 정보</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

          </div>
          <div class="modal-body">

            <div class="mb-3">
              <label class="form-label">이름</label>
              <input type="text" class="form-control" id="newUserName" placeholder="홍길동">
            </div>

            <div class="mb-3">
              <label class="form-label">연락처</label>
              <input type="tel" class="form-control" id="newUserPhone" placeholder="010-1234-5678">
            </div>

            <div class="mb-3">
              <label class="form-label">주소</label>
              <input type="text" class="form-control" id="newUserAddress" placeholder="서울특별시 동작구 여의대방로 ..." readonly>
            </div>

            <div class="mb-3">
              <label class="form-label">상세 주소</label>
              <input type="text" class="form-control" id="newUserSubAddress" placeholder="자이아파트 102동 2101호">
            </div>



          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" id="newDeliveryBtn">배송지 추가</button>
          </div>
        </div>
      </div>
    </div>

    <%- include('includes/footer') %>

