<%- include('includes/header') %>
  <%- include('includes/sidebar') %>
    <!-- 주문확인모달 
    주문 취소 api 연동-->
    <div class="modal fade" id="ExtralargeModal" tabindex="-1">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <div>
              <h5 class="modal-title" id="pending-modal-title"></h5>
              <p style="margin-left: 10px;" id="pending-modal-subtitle"></p>
            </div>
            <button type="button" class="btn-close modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="card-body">
            <!-- List group with active and disabled items -->
            <ul class="list-group list-group-flush" id="pending-modal-list">


            </ul><!-- End Clean list group -->
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <h4 style="font-weight:600;">총 결제금액</h4>
                <h4 id="pending-modal-all-price">00,000원</h4>
              </div>
            </li>
          </div>
          <div class="modal-footer d-flex justify-content-around">
            <button type="button" class="btn modalBtn" style="background-color:#d62828;"
              id="pending-modal-order-refusal-btn">주문취소</button>
            <button type="button" class="btn modalBtn" style="background-color:#2a9d8f;" data-bs-toggle="modal"
              data-bs-target="#largeModal">주문접수</button>
          </div>
        </div>
      </div>
    </div>
    <!-- 조리시작모달 
    주문상태 변경 api연동-->
    <div class="modal fade" id="largeModal" tabindex="-1">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <div>
              <h5 class="modal-title">조리 예상시간</h5>
            </div>
            <button type="button" class="btn-close modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="d-flex align-self-center">
              <input id="timeInput" class="form-control form-control-lg" type="number" min="10" max="100" step="10"
                placeholder="예상 시간을 입력해주세요" aria-label=".form-control-lg example">
              <p style="font-size:2.5em;margin: none;">분</p>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-around">
            <button type="button" class="btn modalBtn" style="background-color:#d62828 ;"
              data-bs-dismiss="modal">주문취소</button>
            <button type="button" class="btn modalBtn" style="background-color:#2a9d8f;" data-bs-toggle="modal"
              id="pending-modal-order-btn">조리시작</button>
          </div>
        </div>
      </div>
    </div><!-- End Large Modal-->
    <!-- 배달시작모달
    주문상태 변경 api연동-->
    <div class="modal fade" id="cookingModal" tabindex="-1">
      <div class="modal-dialog modal-xl">
        <div class="modal-content">
          <div class="modal-header">
            <div>
              <h5 class="modal-title" id="cooking-modal-title"></h5>
              <p style="margin-left: 10px;" id="cooking-modal-subtitle"></p>
            </div>
            <button type="button" class="btn-close modal-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush" id="cooking-modal-list">


            </ul><!-- End Clean list group -->
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <h4 style="font-weight:600;">총 결제금액</h4>
                <h4 id="cooking-modal-all-price"></h4>
              </div>
            </li>
            <!-- List group with active and disabled items -->
          </div>
          <div class="modal-footer d-flex justify-content-around">
            <button type="button" class="btn modalBtn" style="background-color:#2a9d8f;" data-bs-toggle="modal"
              id="cooking-modal-order-btn">배달시작</button>
          </div>
        </div>
      </div>
    </div>
    <main id="main" class="main">
      <div class="card">
        <div class="card-body">
          <!-- Pills Tabs -->
          <ul class="nav nav-pills my-4" id="pills-tab" role="tablist">
            <li class="nav-item orderNav" role="presentation">
              <button class="nav-link active" id="pills-pending-tab" data-bs-toggle="pill"
                data-bs-target="#pills-pending" type="button" role="tab" aria-controls="pills-pending"
                aria-selected="true">대기</button>
            </li>
            <li class="nav-item orderNav" role="presentation">
              <button class="nav-link" id="pills-cooking-tab" data-bs-toggle="pill" data-bs-target="#pills-cooking"
                type="button" role="tab" aria-controls="pills-cooking" aria-selected="false">조리시작</button>
            </li>
            <li class="nav-item orderNav" role="presentation">
              <button class="nav-link" id="pills-delivery-tab" data-bs-toggle="pill" data-bs-target="#pills-delivery"
                type="button" role="tab" aria-controls="pills-delivery" aria-selected="false">배달시작</button>
            </li>
            <li class="nav-item orderNav" role="presentation">
              <button class="nav-link" id="pills-completed-tab" data-bs-toggle="pill" data-bs-target="#pills-completed"
                type="button" role="tab" aria-controls="pills-completed" aria-selected="false">배달완료</button>
            </li>
          </ul>
          <div class="tab-content  p-2 container-lg" id="myTabContent">
            <!--tab-pane는 각 탭(대기,조리시작...)에 해당하는 주문목록을 가지고 있습니다 -->
            <div class="tab-pane fade show active" id="pills-pending" role="tabpanel" aria-labelledby="home-tab">
              <!-- card body안 텍스트대신 변수를 할당하고 접수하기 버튼에 api연동해주세요 맨위의 card만 모달이 할당되어있습니다
            맨위의 card를 복사해서 써주세요 나머지는 지워도 됨-->


            </div>
            <div class="tab-pane fade" id="pills-cooking" role="tabpanel" aria-labelledby="profile-tab">


            </div>
            <div class="tab-pane fade" id="pills-delivery" role="tabpanel" aria-labelledby="contact-tab">

            </div>
            <div class="tab-pane fade" id="pills-completed" role="tabpanel" aria-labelledby="contact-tab">

            </div>
          </div><!-- End Pills Tabs -->

        </div>
      </div>
    </main><!-- End #main -->

    <%- include('includes/footer') %>

