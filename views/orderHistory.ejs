/<%- include('includes/header') %>
  <%- include('includes/sidebar') %>
  <!-- 주문상세보기 모달입니다 안에 주문상세 내역을 넣어주세요 -->
  <div class="modal fade" id="cartModals" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="titleList mt-4">
                    <h5 class="cart-title" id="restaurantNames">00음식점</h5>
                </div>
                <button type="button" class="btn-close" id="modal-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div>
                <!-- List group with active and disabled items -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item my-2" id="itemLists">
                    </li>
                </ul>
                <!-- End Clean list group -->
            </div>
            <div class="modal-footer px-4 my-2 flex-column">
                <div class="d-flex justify-content-between">
                    <h4 style="font-weight: 600">총 결제금액</h4>
                    <h4 id="sumPrices">00,000원</h4>
                </div>
                <button type="button" class="btn btn-success btn-lg" id="payBtn">결제하기</button>
            </div>
        </div>
    </div>
</div>
  <!-- 리뷰 수정 모달입니다
    리뷰 추가모달로도 같이 쓸 수 있을지 고민중입니다... -->
  <div class="modal fade" id="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="row mb-3 justify-content-center">
            <div class="col-md-8 col-lg-9 ">
              <img src="assets/img/card.jpg" alt="Profile" id="reviewImg"class="rounded">
              <div class="pt-2">
                <a href="#" class="btn btn-primary btn" title="Upload new profile image"><i
                    class="bi bi-upload" id="imageBtn"></i></a>
                <input type="file" style="display:none" id="profileImage"
                  accept="image/gif, image/png, image/jpg, image/jpeg">
                <a href="#" class="btn btn-danger btn" title="Remove my profile image"
                  id="imageDelBtn"><i class="bi bi-trash"></i></a>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-body d-flex flex-column w-100" id="modalBody">
            <select class="form-select form-select-lg mb-3"id="rate" aria-label=".form-select-lg example">
                <option selected hidden>별점을 선택해주세요</option>
                <option value="1">⭐️</option>
                <option value="2">⭐️⭐️</option>
                <option value="3">⭐️⭐️⭐️</option>
                <option value="4">⭐️⭐️⭐️⭐️</option>
                <option value="5">⭐️⭐️⭐️⭐️⭐️</option>
              </select>
              
            <div class="form-floating">
                <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                <label for="floatingTextarea2">음식은 어떠셨나요?</label>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn modalBtn reviewDelBtn" style="background-color:#d62828;">삭제</button>
          <button type="button" class="btn modalBtn reviewSaveBtn"style="background-color:#2a9d8f;">저장</button>
        </div>
      </div>
    </div>
  </div>
    <main id="main" class="main">
        <div class="container-xg card-back">
            <h3 class="title ps-3"><%=nickname%>님의 주문내역입니다</h3>
            <div class="cardBox mt-3 d-flex flex-wrap justify-content-around">
            </div>
        </div>
    </main><!-- End #main -->

    <%- include('includes/footer') %>

      <!-- Vendor JS Files -->
      <script src="/assets/vendor/apexcharts/apexcharts.min.js"></script>
      <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="/assets/vendor/chart.js/chart.umd.js"></script>
      <script src="/assets/vendor/echarts/echarts.min.js"></script>
      <script src="/assets/vendor/quill/quill.min.js"></script>
      <script src="/assets/vendor/simple-datatables/simple-datatables.js"></script>
      <script src="/assets/vendor/tinymce/tinymce.min.js"></script>
      <script src="/assets/vendor/php-email-form/validate.js"></script>

      <!-- Template Main JS File -->
      <script src="/assets/js/main.js"></script>
      <script src="/assets/js/orderHistory.js" defer></script>
      </body>

