<%- include('includes/header') %>
  <%- include('includes/sidebar') %>
    <!-- modal안의 텍스트대신 변수를 할당하고 메뉴삭게, 수정 버튼에 api연동해주세요-->
<div class="modal fade" id="largeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <div class="d-flex flex-column align-items-center">
            <img src="<%= image %>" class="img-fluid rounded-start modal-image" alt="..." id="modalImage">
            <label class="file-label" for="chooseFile">이미지 선택</label>
            <input class="file" id="chooseFile"
            type="file"
            accept="image/png, image/jpeg, image/gif"
            >
            </div>
          </div>
        <div class="modal-body d-flex flex-column w-75">
            <input class="modalEdit" id="modalName" placeholder=""/>
            <input class="modalEdit" placeholder="메뉴상세내용 완전 맛있는 00맛 00000"/>
            <input class="modalEdit" type="number" id="modalPrice" placeholder="가격:"/>
        </div>
        <div class="modal-footer d-flex justify-content-around">
          <button type="button" class="btn modalBtn" style="background-color:#d62828;">메뉴삭제</button>
          <button type="button" class="btn modalBtn"style="background-color:#ffb703;">메뉴수정</button>
        </div>
      </div>
    </div>
  </div>
  <!-- 메뉴추가버튼에 api연동해주세요-->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <div class="d-flex flex-column align-items-center">
              <img src="assets/img/card.jpg" class="img-fluid rounded-start modal-image" alt="...">
              <label class="file-label" for="chooseFile">이미지 선택</label>
              <input class="file" id="chooseFile"
              type="file"
              accept="image/png, image/jpeg, image/gif"
              >
              </div>
            </div>
          <div class="modal-body d-flex flex-column w-75">
              <input class="modalEdit" id="menuName" placeholder="메뉴이름을 입력해주세요"/>
              <input class="modalEdit" id="menuDesc" placeholder="메뉴상세내용을 입력해주세요"/>
              <input class="modalEdit" id="menuPrice" type="number"placeholder="가격을 입력해주세요"/>
          </div>
          <div class="modal-footer d-flex justify-content-around">
            <button type="button" class="btn modalBtn" style="background-color:#d62828;" data-bs-dismiss="modal">취소</button>
            <button type="button" class="btn modalBtn"style="background-color:#4895ef;" id="createBtn">메뉴추가</button>
          </div>
        </div>
      </div>
  </div>
    <main id="main" class="main">
        <div class="card">
            <div class="card-body p-3">
                <div class=" d-flex justify-content-between">
                    <h5 class="card-title title">메뉴 관리</h5>
                    <button class="card-title-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">추가</button>
                </div>
                <div class="d-flex flex-wrap justify-content-center" id="menuList">
                 <!-- card body안 텍스트대신 변수를 할당하고 menuCard에 api연동해주세요 맨위의 card만 모달이 할당되어있습니다
                  맨위의 card를 복사해서 써주세요 나머지는 지워도 됨-->
                    <div class="card my-3 menuCard" data-bs-toggle="modal" data-bs-target="#largeModal">
                        <div class="row g-0">
                        <div class="col-md-4">
                            <img src="assets/img/card.jpg" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                            <h5 class="card-title menuTitle">메뉴이름</h5>
                            <p class="card-text">메뉴상세내용 완전 맛있는 00맛 00000</p>
                            <h5 class="card-sub-title">가격: 00,000원</h5>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>

    </main><!-- End #main -->

    <%- include('includes/footer') %>

      <!-- Vendor JS Files -->
      <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
      <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="assets/vendor/chart.js/chart.umd.js"></script>
      <script src="assets/vendor/echarts/echarts.min.js"></script>
      <script src="assets/vendor/quill/quill.min.js"></script>
      <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
      <script src="assets/vendor/tinymce/tinymce.min.js"></script>
      <script src="assets/vendor/php-email-form/validate.js"></script>

      <!-- Template Main JS File -->
      <script src="assets/js/main.js"></script>
      <script type="module" src="assets/js/signup.js"></script>
      <script type="module" src="assets/js/index.js"></script>
      <script type="module" src="assets/js/menuAdmin.js"></script>
      </body>

      </html>